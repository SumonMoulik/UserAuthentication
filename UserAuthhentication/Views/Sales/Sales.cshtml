
@{
    ViewBag.Title = "Sales";
    List<UserAuthhentication.Models.Product> products = ViewBag.Products;
}
<script src="~/Scripts/AppJS/Sales/ProductSales.js"></script>

<div class="page-container row-fluid">
    <!-- START CONTENT -->
    <section id="main-content">
        <section class="wrapper main-wrapper" style=''>

            <div class="col-lg-12">
                <section class="box ">
                    <div class="content-body">
                        <div class="row">
                            <div class="col-md-8 col-sm-8 col-lg-8" style="margin:1px 0px">
                                <fieldset style="border:1px solid gray; margin-right:0px;">
                                    <legend>Sales Details</legend>
                                    <div class="col-md-6 col-sm-6 col-lg-6">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label" style="text-align:right;">Product</label>
                                            <div class="controls col-md-8">
                                                <select id="ProductId" name="ProductId" class="form-control">
                                                    <option value="">--Select Product--</option>
                                                    @foreach (var product in products)
                                                    {
                                                        <option value="@product.ProductId">@product.ProductName</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label col-md-4" style="text-align:right;">Price</label>
                                            <div class="controls col-md-8">
                                                <input type="text" id="ProdPrice" class="form-control" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label col-md-4" style="text-align:right;">Quantity</label>
                                            <div class="controls col-md-8">
                                                <input type="text" id="Quantity" class="form-control" />
                                            </div>
                                            <input type="submit" value="Add To List" class="btn btn-primary col-md-offset-8" id="btnAdd" />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-lg-6">
                                        <div class="form-group">
                                            <label class="form-label col-md-4" style="text-align:right;">Total</label>
                                            <div class="controls col-md-8">
                                                <input type="text" id="Total" class="form-control" style="text-align:right" value="0" readonly />
                                            </div>
                                        </div>                                        
                                    </div>
                                </fieldset>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="table table-responsive">
                                        <table id="SalesDetails" class="table-striped col-sm-6">
                                            <tr><th>Product Name</th><th>Rate</th><th>Quantity</th><th>Prod. Total</th><th>Remove</th><th>Edit</th></tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
</div>